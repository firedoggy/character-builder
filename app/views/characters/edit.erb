<h1>Edit <%= @character.name %></h1>
<p>
	<%= @error %>
</p>
<div class="row">
	<div class="column">
		<p> <strong>Name:</strong>
            <%= @character.name %>
                <br> <strong>Gender:</strong>
				<%= @character.gender %>
                    <br> <strong>Age:</strong>
                    <%= @character.age %>
						<br> <strong>Race:</strong>
						<%= @character.race %>
							<br> <strong>Theme:</strong>
							<%= @character.theme %>
								<br> <strong>Class:</strong>
								<%= @character.clas %>
		</p>
	</div>
	<div class="column">
        <table style="width:20%">
            <form action='/characters/<%=@character.id%>' method='post'>
                <input type="hidden" name="_method" value="patch">
                <tr> 
                    <td><label>Name:</label></td>
                    <td><input type="text" name="character[name]" value="<%= @character.name %>" required></td>
                </tr>
                <tr>         
                    <td><label>Gender:</label></td>
                    <td><select name="character[gender]" id="gender" required>
                            <% genders = ["Male", "Female", "Other"] %>
                                <% genders.each do |g| %>
                                    <option value=<%=g %>>
                                        <%= g %>
                                    </option>
                                    <% end %>
                        </select></td>
                </tr>
                <tr>        
                    <td><label>Age:</label></td>
                    <td><input type="integer" name="character[age]" value="<%= @character.age %>" required></td>
                </tr>
                <tr>  
                    <td><label>Race:</label></td>
                    <td><select name="character[race]" id="race" required>
                        <% Race.all.each do |r| %>
                            <option value=<%=r .name %>>
                                <%= r.name %>
                            </option>
                            <% end %>
                    </select></td>
                </tr>
                <tr>   
                    <td><label>Theme:</label></td>
                    <td><select name="character[theme]" id="theme" required>
                        <% Theme.all.each do |t| %>
                            <option value=<%=t .name %>>
                                <%= t.name %>
                            </option>
                            <% end %>
                    </select></td>
                </tr>
                <tr>  
                    <td><label>Class:</label></td>
                    <td><select name="character[clas]" id="clas" required>
                        <% Chclass.all.each do |c| %>
                            <option value=<%=c .name %>>
                                <%= c.name %>
                            </option>
                            <% end %>
                    </select></td>
                </tr>
                <tr>  
                    <td></td>
                    <td><button type="submit">Update Character</button></td>
                </tr>
            </form>
        </table>
    </div>
</div>